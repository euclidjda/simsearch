<div class="span10">
	<div class="row-fluid"> 
		<div class="span2 result-stats" id="target-info">
			<div class="panel-header">
				<span> <%= target_fields['name'] %> (<%= target_fields['ticker'] %>) </span>
			</div>
			<div>
                <% price_date = target_fields['pricedate'] %>
                <%= Date::MONTHNAMES[price_date.month][0..2] + ' ' + price_date.day.to_s + ', ' + price_date.year.to_s %><br>
				Market Cap (MM): <%= sprintf("%.2f",target_fields['mrkcap']) %><br>
				P/E: <%= sprintf("%.2f",target_fields['pe']) %><br>
			</div>
		</div>
		<div class="span2 result-stats" id ="result-summary">
                  Average 1 Year Relative Performance: 
		  <div id="median-perf">
		      <span><img id="summary-image" src=""></img></span>
		      <span id="summary-num"></span>
		  </div>
		</div>
	</div>

<div id="comparable-panel-template" style="display:none" class="span2 comparable">
<div id="panel-name" title="Click to Compare to <%= target_fields['name'] %>"></div>
<div>
  <span id="panel-ticker"></span> -
  <span id="panel-date"></span>
</div>
<div id="panel-performance">
  <span><img id="perf-image" src=""></img></span><span id="perf-num"></span>
</div>
<div id="panel-similarity"></div>
</div>

<div id="all-search-ids" search_ids="<%= search_ids.values * ',' %>"></div>

<% first_row = true %>
<% FrontdoorHelper::epochs.each do |ep| %>
	
	<% if !first_row %>
		</div> <!-- row fluid -->
		<% first_row = false %>
	<% end %>

	<% row = { :search_id => search_ids[ep] } %>

	<%= render :partial => "row", :object => row %>

<% end %>

<div id="comparable-modal" class="modal hide fade comparable-modal" tabindex="-1"
     role="dialog" aria-labelledby="myComparableModalLabel" aria-hidden="true">

  <div class="modal-header"></div>

  <div class="modal-body">

    <table class="comparable-table" border=4><tr>

	<td class="comparable-table-left-pane">

	  <div id="comparable-carousel-left" class="carousel">
	    <!-- Carousel items -->
	    <div class="carousel-inner-left">
	      <div class="item comparable-detail">
		
		HERE IS WHERE THE COMPARABLE DETAILS GOES


	      </div>
	    </div>
	  </div>

	</td>
	<td class="comparable-table-right-pane">

	  <div id="comparable-carousel" class="carousel slide">
  <!-- Carousel items -->
	    <div class="carousel-inner">
	      <div class="active item comparable-detail">Item 1</div>
	      <div class="item comparable-detail">Item 2</div>
	      <div class="item comparable-detail">Item 3</div>
	    </div>
	    
	    <!-- Carousel nav -->
	    <a class="carousel-control left" href="#myCarousel" 
	       data-slide="prev"
	       onClick="$('#comparable-carousel').carousel('prev')">&lsaquo;</a>
	    <a class="carousel-control right" href="#myCarousel" 
	       data-slide="next" 
	       onClick="$('#comparable-carousel').carousel('next')">&rsaquo;</a>
	    
	  </div>
	</td>

    </tr></table>

  </div> <!-- end of modal-body -->

  <div class="modal-footer">Some Footer Text</div>
    
</div> <!-- end of comparable-model -->

</div> <!-- end of span10-->
