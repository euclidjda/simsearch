<div class="span12">
  <div class="row row-fluid target-row dark-row">
    
    <% pricedate = target_fields['pricedate'] %>
    <% monthname = Date::MONTHNAMES[pricedate.month][0..2] %>


    <div class="span1 timeline-bar">
      <div class="timeline-label">
        TODAY
      </div>
      <div class="timeline-date">
        <%= sprintf("%02d", pricedate.month) + "." +
	    sprintf("%02d", pricedate.day) + "." +
	    sprintf("%02d", pricedate.year - 2000) %>  
      </div>
    </div>
 

    <div class="target-container">

      <div class="date-label">
        <%= monthname + " " + pricedate.year.to_s %>
      </div>

      <% fullname = target_fields['name'] %>
      <div class="target-name"><%= fullname %> </div>
      
      <div class="target-info">
        <b>NASDAQ</b>: <%= target_fields['ticker'] + 
			   " - " + monthname + " " + 
			   pricedate.day.to_s %><br>
        <b>Market Cap</b>:
	<%= number_with_delimiter(target_fields['mrkcap'].to_i,
	    :delimiter => ',') + "M" %>
	<br>
        <b>P/E</b>: <%= sprintf("%.2f",target_fields['pe']) %>
        <b>Price</b>: <%= sprintf("$%.2f",target_fields['price']) %>
      </div>
    </div>

  </div> <!-- target-row -->

  <div class="row-fluid summary-row light-row">
    <div id ="result-summary">
      <%= target_fields['ticker'] %>'s Historical Comparables 
      <i><span id="summary-label">Outperformed</span></i>
      by an Average of:
      <span id="median-perf">
        <span><img id="summary-image" src=""></img></span>
        <span id="summary-num"></span>
      </span>
    </div> 
  </div>

<div id="comparable-panel-template" style="display:none" class="span2 comparable">
  <div class="panel-name" title="Click to Compare to <%= target_fields['name'] %>">
  </div>
  <div class="panel-ticker-and-date">
    <span class="panel-ticker"></span>  -  <span class="panel-date"></span>
  </div>
  <div class="panel-performance">
      <img class="perf-image" src=""></img>
      <span class="perf-num"></span>
      <span class="perf-tag"></span>
  </div>
  <div class="panel-similarity"></div>
</div>

<div id="all-search-ids" search_ids="<%= search_ids.values * ',' %>"></div>

<% first_row = true %>
<% row_num = 0 %>
<% FrontdoorHelper::epochs.each do |ep| %>
	
	<% if !first_row %>
		</div> <!-- row fluid -->
		<% first_row = false %>
	<% end %>
	<% row_num += 1 %>
	<% epoch_label = 
	   (Date.parse(FrontdoorHelper::endDate(ep))+1).to_s[0..3] %>

  	<% row = { :row_num     => row_num, 
                   :search_id   => search_ids[ep],
                   :epoch_label => epoch_label   } %>

  	<%= render :partial => "row", :object => row %>

<% end %>

<%= render :partial => "comparable_modal", :object => target_fields %>
</div> <!-- end of span12-->
