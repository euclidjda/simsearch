
<% row_type = ((row[:row_num]%2)==0) ? 'light-row' : 'dark-row' %>
<% first_row_class = (row[:row_num] == 1) ? 'first-row' : '' %>

<div class="row row-fluid dyna-roller result-row <%= row_type %> <%= first_row_class %>">

        <div class="span1 timeline-bar">

          <% if row[:row_num] == 1 %>
            <div class="timeline-label timeline-label-thisyear">
              <%= (Date.today-365).year %>
            </div>
          <% end %>

          <div class="timeline-ticks">

            <% [8, 6, 4, 2].each do | year | %>

            <div class="timeline-tick timeline-tick-<%= year %>">
              <%= row[:epoch_label].to_i + year %>
            </div>

            <% end %>

          </div>

          <div class="timeline-label">
            <%= row[:epoch_label] %><div class="timeline-label-narrow">'s</div>
          </div>

        </div>

        <div class="result-container"
             search_id="<%= row[:search_id] %>"
             fromdate="<%= row[:fromdate] %>"
             thrudate="<%= row[:thrudate] %>"
             id="row-<%= row[:row_num] %>">
        </div>

        <div class="result-row-bottom"></div>

</div> <!-- dyna-roller -->


