  <div class="full-search-bar">
    <ul>
      <li>
        <form action="<%= search_for_ticker_path %>" method="get" class="search-bar-form" id="search-bar-form">
          <div class="search-field-and-button">
            <%= text_field_tag(:search_entry, nil, :placeholder => "Enter a stock symbol, e.g. IBM", :id => "search_entry") %>
            <!-- Using a button tag below instead of the submit tag so we can place an icon on it. The form behaves the same. -->
            <button class ="btn btn-large btn-inverse" id = "search-button">
              <i class="icon-search icon-white"></i>
            </button>
          </div>
        </form>
      </li>
    </ul>
  </div><!--/.full-search-bar -->
</div><!--/.search-area -->

