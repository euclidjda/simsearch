<header>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container-fluid">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="#">Euclid Prime</a>

        <div class="nav-collapse collapse">
          <ul class="nav pull-right navbar-text">
            <% if current_user %>
              <li><a href="#upgradeModal">Upgrade</a></li>
              <li><%= link_to "Sign Out", '#', :id => 'banner-logout-btn' %></li>
            <% else %>
              <li><a href="#registerModal" data-toggle="modal">Register</a></li>
              <li><a href="#registerModal" data-toggle="modal">Sign In</a></li>                                        
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>

  <!-- Register Modal -->
  <div id="registerModal" class="modal hide fade registerModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Modal header</h3>
  </div>
  <div class="modal-body">
    <p>One fine body…</p>
    <%= form_tag("/login", :method => "post", :class => "navbar-form") do %>
      <%= text_field_tag(:mail_address_entry, nil, :placeholder => "Email") %>
      <%= submit_tag("Sign in", :class => "btn") %>
    <% end %>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary">Save changes</button>
  </div>
  </div> 

</header>

